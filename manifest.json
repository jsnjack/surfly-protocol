{
  "manifest_version": 3,
  "name": "surfly protocol",
  "description": "Emulates support of `surfly://` protocol in browsers",
  "version": "0.0.3",
  "icons": {
    "64": "icons/icon.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "{1c13917a-fa3b-4f7b-81b2-77d917e2c389}"
    }
  },
  "permissions": ["webNavigation", "tabs"],
  "host_permissions": ["*://*/*"],
  "background": {
    "scripts": ["background.js"]
  }
}
